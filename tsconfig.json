{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["DOM", "ES2016", "DOM.Iterable", "ScriptHost"],
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "removeComments": true
  },
  "include": ["./src/*", "templates"],
  "exclude": ["node_modules"]
}
