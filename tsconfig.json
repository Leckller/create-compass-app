{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ES2016",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "removeComments": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "src/templates/**/*"
  ]
}